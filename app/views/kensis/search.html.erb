<%= form_with(url: search_kensis_path, local: true, method: :get, class: "form-inline mt-2 mt-md-0") do |form| %>
        <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "form-control mr-sm-2" %>
        <%= form.submit "検索", class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>
<div class="contents row">
  <ul class='kensi-lists'>
      <% @kensis.each do |kensi|%>
      <li class='list'>
       <%= link_to kensi_path(kensi.id) do %>
        <div class='kensi-info'>
          <div class='kensi-img-content'>
            <%= image_tag kensi.image, class: 'kensi-img' %>
          </div>
          <div class='kensi-title'>
            <%= truncate(kensi.title, length:15) do%>
            <%= link_to "続きを読む" ,kensi_path(kensi.id),class:"kensi-read" %>
            <%end%>
          </div>
        </div>
       <%end%>
      </li>
     <% end %>
    </ul>
</div>
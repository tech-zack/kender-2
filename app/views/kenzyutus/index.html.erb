  <body  class="d-flex flex-column h-100" >
    <a id="skippy" class="sr-only sr-only-focusable" href="#content">
  <div class="container">
    <span class="skiplink-text">Skip to main content</span>
  </div>
</a>

  <!-- Fixed navbar -->
  <%= render "shared/header"%>

<!-- Begin page content -->
<main role="main" class="flex-shrink-0">
  <div class="container">
  <img src="/assets/samurai_kettou.png" alt="Generic placeholder image" class="rounded" width="140" height="140">
    <p class="lead">剣術</p>
  </div>
</main>

<footer class="footer mt-auto py-3">
  <div class="container">
    <%= link_to(new_kenzyutu_path, class: 'post-btn') do %>
    <span class="text-muted">みんなの投稿</span>
    <%end%>
  </div>
</footer>

